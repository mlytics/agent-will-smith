# IMPORTANT: This file uses namespaced environment variables
# - CORE_* prefix for core/shared configurations
# - AGENT_PRODUCT_RECOMMENDATION_* prefix for product recommendation agent

# Databricks Configuration (OAuth - Service Principal)
CORE_DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
CORE_DATABRICKS_CLIENT_ID=your-client-id-uuid
CORE_DATABRICKS_CLIENT_SECRET=your-client-secret

# MLFlow Configuration
CORE_MLFLOW_TRACKING_URI=databricks
CORE_MLFLOW_REGISTRY_URI=databricks-uc
CORE_MLFLOW_EXPERIMENT_ID=your-experiment-id
CORE_MLFLOW_ENABLE_TRACING=true

# FastAPI Configuration
CORE_FASTAPI_APP_NAME=agent-will-smith
CORE_FASTAPI_VERSION=0.1.0
CORE_FASTAPI_ENVIRONMENT=development
CORE_FASTAPI_PORT=8000
CORE_FASTAPI_RELOAD=true
CORE_FASTAPI_API_KEY=your-secure-api-key-here

# Logging Configuration
CORE_LOG_LEVEL=INFO

# Product Recommendation Agent Configuration
# Agent Metadata (from BaseAgentConfig in core/config/ - all required, no defaults)
AGENT_PRODUCT_RECOMMENDATION_AGENT_NAME=product_recommendation
AGENT_PRODUCT_RECOMMENDATION_AGENT_VERSION=1.0.0
AGENT_PRODUCT_RECOMMENDATION_PROMPT_CACHE_TTL=3600

# Agent-specific Prompts (can have multiple)
AGENT_PRODUCT_RECOMMENDATION_PROMPT_NAME=prompts:/aigc_prod.intent_engine.product_recommendation_prompt/1

# LLM Configuration
AGENT_PRODUCT_RECOMMENDATION_LLM_ENDPOINT=databricks-gpt-5-mini
AGENT_PRODUCT_RECOMMENDATION_LLM_TEMPERATURE=0.7
AGENT_PRODUCT_RECOMMENDATION_LLM_MAX_TOKENS=2048

# Vector Search Configuration
AGENT_PRODUCT_RECOMMENDATION_VECTOR_SEARCH_ENDPOINT=aigc-vector-search-endpoint
AGENT_PRODUCT_RECOMMENDATION_ACTIVITIES_INDEX=aigc_prod.intent_engine.content_activity_gold_index
AGENT_PRODUCT_RECOMMENDATION_BOOKS_INDEX=aigc_prod.intent_engine.content_book_gold_index
AGENT_PRODUCT_RECOMMENDATION_ARTICLES_INDEX=aigc_prod.intent_engine.content_article_gold_index

# Vector Search Timeout
AGENT_PRODUCT_RECOMMENDATION_VECTOR_SEARCH_TIMEOUT_SECONDS=5.0

# Agent Behavior
AGENT_PRODUCT_RECOMMENDATION_MAX_K_PRODUCTS=10
AGENT_PRODUCT_RECOMMENDATION_MAX_AGENT_STEPS=10
AGENT_PRODUCT_RECOMMENDATION_AGENT_TIMEOUT_SECONDS=60

