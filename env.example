# Application Configuration
APP_NAME=agent-will-smith
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Server
PORT=8000
RELOAD=true

# Authentication
# IMPORTANT: Change this in production!
API_KEY=your-secure-api-key-here

# Databricks Configuration (OAuth - Service Principal)
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_CLIENT_ID=your-client-id-uuid
DATABRICKS_CLIENT_SECRET=your-client-secret

# MLFlow Configuration
MLFLOW_TRACKING_URI=databricks
MLFLOW_REGISTRY_URI=databricks-uc
MLFLOW_EXPERIMENT_ID=your-experiment-id  # UAT: 425542338165615

# LLM Configuration
LLM_ENDPOINT=databricks-gpt-5-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=

# Vector Search Configuration
# IMPORTANT: Use the exact endpoint name from Databricks UI
VECTOR_SEARCH_ENDPOINT=aigc-vector-search-endpoint
ACTIVITIES_INDEX=aigc_uat.intent_engine.content_activity_gold_index
BOOKS_INDEX=aigc_uat.intent_engine.content_book_gold_index
ARTICLES_INDEX=aigc_uat.intent_engine.content_article_gold_index
EMBEDDING_MODEL=databricks-gte-large-en

# Previous SIT environment (for reference):
# VECTOR_SEARCH_ENDPOINT=agent-will-smith-vs-endpoint-sit
# ACTIVITIES_INDEX=aigc_sit.default.activities_mock_vs_index
# BOOKS_INDEX=aigc_sit.default.books_mock_vs_index

# Agent Configuration
MAX_K_PRODUCTS=10
MAX_AGENT_STEPS=10
AGENT_TIMEOUT_SECONDS=60

# Prompt Management
# After running scripts/register_prompt.py, update this with the generated URI
PROMPT_NAME=prompts:/aigc_uat.intent_engine.product_recommendation_prompt/1

# Observability
ENABLE_TRACING=true
ENABLE_METRICS=true
METRICS_INTERVAL_SECONDS=60

